{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "singularName": "comment",
    "pluralName": "comments",
    "displayName": "Comment ",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "Content": {
      "type": "text"
    },
    "CommentDateTime": {
      "type": "datetime"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "comment"
    },
    "likeCount": {
      "type": "integer",
      "default": 0
    },
    "isReplyable": {
      "type": "boolean",
      "default": true
    },
    "replies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "parentComment"
    },
    "parentComment": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::comment.comment",
      "inversedBy": "replies"
    },
    "article": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::article.article"
    }
  }
}
